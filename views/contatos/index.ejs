<% include ../header %> 
<header class="row-fluid text-center"> 
	<h2>NBatePapo - Agenda de contatos</h2> 
</header> 
	<section class="row-fluid"> 
		<table class="table well">
			<thead>
				<tr>
					<th>Nome</th>
					<th>E-mail</th>
					<th>Ação</th>
				</tr>				
			</thead>
			<tbody>
				<% contatos.forEach(function(contato, index) { %>
					<tr>
						<td><%- contato.nome %></td>
						<td><%- contato.email %></td>
						<td>
							<a href="/contato/<%- index %>"  class="btn btn-info">Detalhes</a> 
							<a href="/chat/<%- contato.email %>"  class="btn btn-inverse">Conversar</a> 
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</section> 
<% include ../exit %> 
<% include ../footer %> 